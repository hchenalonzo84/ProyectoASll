@{
    ViewData["Title"] = "ElectroTech";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5.3.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Estilos CSS -->
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/home.css">

    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <!-- Contenedor principal -->
    <div class="container-fluid d-flex justify-content-center align-items-center container-layout mt-4">

        <!-- Main content -->
        <main class="main-content">
            <section class="main-section">
                <section class="main-section buttons-section">
                    <div class="icon-button">
                        <a asp-area="" asp-controller="Home" asp-action="Catalogo"><i class="fas fa-file-invoice"></i></a>
                        <span>Cotizacion</span>
                    </div>
                    <div class="icon-button">
                        <i class="fas fa-users"></i>
                        <span>Cliente</span>
                    </div>
                    <div class="icon-button">
                        <i class="fas fa-box-open"></i>
                        <span>Producto</span>
                    </div>
                    <div class="icon-button">
                        <i class="fas fa-cubes"></i>
                        <span>Inventario</span>
                    </div>
                </section>
            </section>
            <section class="main-section">

                <div class="charts-wrapper">
                    <!-- Gráfico de líneas -->
                    <div class="chart-container">
                        <canvas id="lineChart"></canvas>
                    </div>

                    <!-- Gráfico de pastel -->
                    <div class="chart-container">
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </section>

        </main>

        <!-- Aside content -->
        <aside class="aside-content ">
            <!-- Sección de perfil -->
            <section class="aside-section profile-section">
                <img src="~/img/hutao.jpg" alt="Avatar" class="profile-avatar">
                <h3 class="profile-name">Andreas Iniesta</h3>
                <p class="profile-role">Empleado</p>
                <p class="profile-contact">Tel: 502 4647-3892</p>
                <p class="profile-email">Andreas@gmail.com</p>
                <button class="logout-btn">Cerrar Sesión</button>
            </section>

            <!-- Sección de historial -->
            <section class="aside-section history-section">
                <div class="history-header">
                    <h4>Historial</h4>
                    <a href="#" class="view-all-link">Ver todo</a>
                </div>
                <ul class="history-list">
                    <li>
                        <span class="status-dot status-active"></span>
                        Cotización <small>Turned on • Jaquiline</small>
                        <span class="history-time">03:20</span>
                    </li>
                    <li>
                        <span class="status-dot status-active"></span>
                        Cotización <small>Turned on • Firoz</small>
                        <span class="history-time">01:48</span>
                    </li>
                    <li>
                        <span class="status-dot status-error"></span>
                        Agregar producto <small>Turned off • Jaquiline</small>
                        <span class="history-time">11:36</span>
                    </li>
                    <li>
                        <span class="status-dot status-inactive"></span>
                        Cotización <small>Turned off • Jaquiline</small>
                        <span class="history-time">09:15</span>
                    </li>
                </ul>
            </section>
        </aside>

    </div>

    <!-- Bootstrap JS (Popper y Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Script personalizado -->
    <script src="~/js/script.js"></script>
    <script src="~/js/chartjs/graficos.js"></script>
</body>
</html>

